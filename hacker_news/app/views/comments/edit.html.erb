<h2>Edit comment</h2>
<% if @comment.errors.any? %>
   <h3>Oops there were some errors. Please try again:</h3>
   <ul>
     <% @comment.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 <% end %>


<%= form_for [@news, @comment] do |f|%>
<%= f.label :user %>
    <%= f.text_field :user %>
    <%=f.label :comment%>
    <%=f.text_field :comment%>
    <%= f.submit  %>
  <% end %>
